<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radio_group_freeform_display_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:checkedButton="@id/radioButton_root">

            <RadioButton
                android:id="@+id/radioButton_imageReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radiobutton_imagereader" />

            <RadioButton
                android:id="@+id/radioButton_mediaCodec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radiobutton_mediacodec" />

            <RadioButton
                android:id="@+id/radioButton_texture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radiobutton_texture" />
        </RadioGroup>
    </LinearLayout>

</ScrollView>