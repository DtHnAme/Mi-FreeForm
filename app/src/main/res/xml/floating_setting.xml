<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_show_location"
        app:summaryOff="@string/switch_show_location_off"
        app:summaryOn="@string/switch_show_location_on"
        app:switchTextOff="@string/switch_show_location_on"
        app:switchTextOn="@string/switch_show_location_on"
        app:title="@string/switch_show_location" />

    <SeekBarPreference
        android:layout_width="wrap_content"
        android:key="floating_button_size"
        android:max="250"
        android:title="@string/floating_button_size"
        app:defaultValue="125"
        app:min="1" />

    <SeekBarPreference
        android:layout_width="wrap_content"
        android:key="floating_button_alpha"
        android:max="255"
        android:title="@string/floating_button_alpha"
        app:defaultValue="200"
        app:min="0" />

</PreferenceScreen>